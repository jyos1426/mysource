<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="caps.poomat">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".PoomAtApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Intro.IntroActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".MapActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.MainTheme"/>
        <activity android:name=".Register.RegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.MainTheme"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.MainTheme">
        </activity>
        <activity android:name=".FoodItemActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.MainTheme"/>
        <activity android:name=".Message.RequestDealActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.MainTheme"/>
        <activity android:name=".Message.RequestReplyActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.MainTheme"/>
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>


</manifest>
